{
  "name": "leaf-db",
  "version": "12.0.0",
  "description": "Small file-based database for node.js",
  "type": "module",
  "types": "dist/leafdb.d.ts",
  "exports": {
    ".": "./dist/leafdb.js"
  },
  "keywords": [
    "database",
    "embedded",
    "persistence",
    "javascript",
    "typescript",
    "nodejs",
    "nosql",
    "fs"
  ],
  "files": [
    "dist/**/*"
  ],
  "repository": "https://github.com/chronoDave/leaf-db.git",
  "author": "Chronocide",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=22.13.1"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint src",
    "build": "rollup -c",
    "test": "node --no-warnings --experimental-strip-types --test src/**/*.spec.ts",
    "preversion": "npm run lint && npm run test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags && npm publish"
  },
  "optionalDependencies": {
    "@chronocide/eslint-config": "github:chronoDave/eslint-config",
    "eslint": "^9.35.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "esbuild": "^0.25.5",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.1.6"
  }
}
