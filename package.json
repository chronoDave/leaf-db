{
  "name": "leaf-db",
  "version": "10.1.1",
  "description": "Small file-based database for node.js",
  "type": "module",
  "types": "dist/leafdb.d.ts",
  "exports": {
    ".": "./dist/leafdb.js"
  },
  "keywords": [
    "database",
    "embedded",
    "persistence",
    "javascript",
    "typescript",
    "nodejs",
    "nosql",
    "fs"
  ],
  "files": [
    "dist/**/*"
  ],
  "repository": "https://github.com/chronoDave/leaf-db.git",
  "author": "Chronocide",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=22.13.1"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint src",
    "build": "rollup -c",
    "build:test": "node test/build.js",
    "test": "npm run build:test && node --test test/build/**/*.spec.js",
    "test:storage": "npm run build:test && node --test test/build/storage/*.spec.js",
    "test:memory": "npm run build:test && node --test test/build/memory/*.spec.js",
    "test:model": "npm run build:test && node --test test/build/model/*.spec.js",
    "test:modifiers": "npm run build:test && node --test test/build/modifiers/*.spec.js",
    "test:validation": "npm run build:test && node --test test/build/validation/*.spec.js",
    "preversion": "npm run lint && npm run test",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "rambda": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.0",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.1.6"
  }
}
