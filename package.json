    "benchmark": "^2.1.4",
    "esbuild": "^0.11.18",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.0",
    "rollup": "^2.47.0",
    "rollup-plugin-dts": "^3.0.1",
