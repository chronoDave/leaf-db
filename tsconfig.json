{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowJs": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    "eslint.config.js",
    "rollup.config.js",
  ]
}