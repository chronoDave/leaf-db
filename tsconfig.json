{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    ".eslintrc.js",
    "rollup.config.js",
  ]
}